<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://buyProductEdit.caption"
        focusComponent="form"
        messagesPack="com.company.marketplace.web.screens.buyproduct">
    <data>
        <instance id="buyProductDc"
                  class="com.company.marketplace.entity.BuyProduct">
            <view extends="_local">
                <property name="product" view="view-soldProduct-with-product"/>
            </view>
            <loader/>
        </instance>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="editActions" spacing="true">
        <form id="form" dataContainer="buyProductDc">
            <column width="350px">
                <pickerField id="productField" property="product">
                    <actions>
                        <action id="lookup" type="picker_lookup"/>
                        <action id="clear" type="picker_clear"/>
                    </actions>
                </pickerField>
                <textField id="quantityField" property="quantity" datatype="int" maxLength="10"/>
                <textField id="priceField" property="price" editable="false" datatype="decimal">
                    <validators>
                        <decimalMax value="99999999999999999"/>
                    </validators>
                </textField>
            </column>
        </form>
        <hbox id="editActions" spacing="true">
            <button id="commitAndCloseBtn" action="windowCommitAndClose"/>
            <button id="closeBtn" action="windowClose"/>
        </hbox>
    </layout>
</window>
