<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        xmlns:c="http://schemas.haulmont.com/cuba/screen/jpql_condition.xsd"
        caption="msg://manufacturerBrowse.caption"
        focusComponent="table"
        messagesPack="com.company.marketplace.web.screens.manufacturer">
    <data>
        <collection id="manufacturersDc"
                    class="com.company.marketplace.entity.Manufacturer">
            <view extends="_local">
                <property name="address" view="_minimal"/>
                <property name="user" view="_minimal"/>
            </view>
            <loader id="manufacturersDl">
                <query>
                    <![CDATA[select e from marketplace_Manufacturer e]]>
                </query>
            </loader>
        </collection>
        <instance id="manufacturerDc"
                  class="com.company.marketplace.entity.Manufacturer">
            <view extends="_local">
                <property name="address" view="_minimal">
                    <property name="city"/>
                    <property name="street"/>
                    <property name="house"/>
                </property>
                <property name="user" view="_minimal"/>
            </view>
            <loader/>
        </instance>
    </data>
    <actions>
        <action id="save" icon="icons/ok.png" caption="mainMsg://actions.Ok" shortcut="CTRL-ENTER"/>
        <action id="cancel" icon="icons/cancel.png" caption="mainMsg://actions.Cancel" description="Esc"/>
    </actions>
    <dialogMode height="600" width="800"/>
    <layout>
        <split id="split" height="100%" orientation="horizontal" reversePosition="true" width="100%">
            <vbox id="lookupBox" expand="table" height="100%" margin="false,true,false,false" spacing="true">
                <filter id="filter" applyTo="table" dataLoader="manufacturersDl">
                    <properties include=".*"/>
                </filter>
                <groupTable id="table"
                            width="100%"
                            dataContainer="manufacturersDc">
                    <actions>
                        <action id="create" type="create"/>
                        <action id="edit" type="edit"/>
                        <action id="remove" type="remove"/>
                    </actions>
                    <columns>
                        <column id="name"/>
                        <column id="fullName"/>
                        <column id="user"/>
                    </columns>
                    <rowsCount/>
                    <buttonsPanel id="buttonsPanel"
                                  alwaysVisible="true">
                        <button id="createBtn" action="table.create"/>
                        <button id="editBtn" action="table.edit"/>
                        <button id="removeBtn" action="table.remove"/>
                    </buttonsPanel>
                </groupTable>
                <hbox id="lookupActions" spacing="true" visible="false">
                    <button action="lookupSelectAction"/>
                    <button action="lookupCancelAction"/>
                </hbox>
            </vbox>
            <vbox id="editBox" height="100%" margin="false,false,false,true" expand="fieldGroupBox" spacing="true">
                <scrollBox id="fieldGroupBox">
                    <form id="form" dataContainer="manufacturerDc">
                        <column width="350px">
                            <textField id="nameField" property="name" maxLength="255"/>
                            <textField id="addressCityField" property="address.city" maxLength="255"/>
                            <textField id="addressStreetField" property="address.street" maxLength="255"/>
                            <textField id="addressHouseField" property="address.house" maxLength="255"/>
                            <textField id="fullNameField" property="fullName" maxLength="255"/>
                            <pickerField id="userField" property="user">
                                <actions>
                                    <action id="lookup" type="picker_lookup"/>
                                    <action id="clear" type="picker_clear"/>
                                </actions>
                            </pickerField>
                        </column>
                    </form>
                </scrollBox>
                <hbox id="actionsPane" spacing="true" visible="false">
                    <button id="saveBtn" action="save"/>
                    <button id="cancelBtn" action="cancel"/>
                </hbox>
            </vbox>
        </split>
    </layout>
</window>
