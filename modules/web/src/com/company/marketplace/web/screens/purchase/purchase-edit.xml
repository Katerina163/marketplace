<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://purchaseEdit.caption"
        focusComponent="form"
        messagesPack="com.company.marketplace.web.screens.purchase">
    <data>
        <instance id="purchaseDc"
                  class="com.company.marketplace.entity.Purchase">
            <view extends="_local">
                <property name="shop" view="_minimal"/>
                <property name="products" view="_base"/>
                <property name="numberProducts"/>
            </view>
            <loader/>
            <collection id="productsDc" property="products"/>
        </instance>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="editActions" spacing="true">
        <form id="form" dataContainer="purchaseDc">
            <column width="350px">
                <pickerField id="shopField" property="shop">
                    <actions>
                        <action id="lookup" type="picker_lookup"/>
                        <action id="clear" type="picker_clear"/>
                    </actions>
                </pickerField>
                <textField id="numberProductsField" property="numberProducts"/>
            </column>
        </form>
        <groupBox id="productsBox" caption="msg://com.company.marketplace.entity/Purchase.products">
            <table id="productsTable" dataContainer="productsDc" width="100%" height="200px">
                <actions>
                    <action id="add" type="add"/>
                    <action id="exclude" type="exclude"/>
                </actions>
                <columns>
                    <column id="product"/>
                    <column id="price"/>
                    <column id="quantity"/>
                </columns>
                <buttonsPanel>
                    <button action="productsTable.add"/>
                    <button action="productsTable.exclude"/>
                </buttonsPanel>
            </table>
        </groupBox>
        <hbox id="editActions" spacing="true">
            <button id="commitAndCloseBtn" action="windowCommitAndClose"/>
            <button id="closeBtn" action="windowClose"/>
        </hbox>
    </layout>
</window>
