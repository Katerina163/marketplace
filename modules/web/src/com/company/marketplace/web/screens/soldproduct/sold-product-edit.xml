<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://soldProductEdit.caption"
        focusComponent="form"
        messagesPack="com.company.marketplace.web.screens.soldproduct">
    <data>
        <instance id="soldProductDc"
                  class="com.company.marketplace.entity.SoldProduct">
            <view extends="_local">
                <property name="product" view="_minimal"/>
                <property name="shop" view="view-shop-with-products"/>
            </view>
            <loader/>
        </instance>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="editActions" spacing="true">
        <form id="form" dataContainer="soldProductDc">
            <column width="350px">
                <pickerField id="productField" property="product">
                    <actions>
                        <action id="lookup" type="picker_lookup"/>
                        <action id="clear" type="picker_clear"/>
                    </actions>
                </pickerField>
                <textField id="priceField" property="price" datatype="decimal">
                    <validators>
                        <decimalMax value="99999999999999999"/>
                    </validators>
                </textField>
                <textField id="quantityField" property="quantity" datatype="int" maxLength="10"/>
                <textField id="minField" property="min" datatype="int" maxLength="10"/>
                <pickerField id="shopField" property="shop" enable="false" visible="false">
                    <actions>
                        <action id="lookup" type="picker_lookup"/>
                        <action id="clear" type="picker_clear"/>
                    </actions>
                </pickerField>
            </column>
        </form>
        <hbox id="editActions" spacing="true">
            <button id="commitAndCloseBtn" action="windowCommitAndClose"/>
            <button id="closeBtn" action="windowClose"/>
        </hbox>
    </layout>
</window>
