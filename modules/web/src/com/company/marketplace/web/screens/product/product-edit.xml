<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://productEdit.caption"
        focusComponent="form"
        messagesPack="com.company.marketplace.web.screens.product">
    <data>
        <instance id="productDc"
                  class="com.company.marketplace.entity.Product">
            <view extends="_local">
                <property name="manufacturer" view="_minimal"/>
            </view>
            <loader/>
        </instance>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="editActions" spacing="true" margin="true">
        <form id="form" dataContainer="productDc">
            <column width="350px">
                <textField id="nameField" property="name" maxLength="255"/>
                <pickerField id="manufacturerField" property="manufacturer">
                    <actions>
                        <action id="lookup" type="picker_lookup"/>
                        <action id="clear" type="picker_clear"/>
                    </actions>
                </pickerField>
                <textField id="manufacturerPriceField" property="manufacturerPrice" datatype="decimal"/>
            </column>
        </form>
        <hbox id="editActions" spacing="true">
            <button id="commitAndCloseBtn" action="windowCommitAndClose"/>
            <button id="closeBtn" action="windowClose"/>
        </hbox>
    </layout>
</window>
